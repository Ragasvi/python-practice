#nested for loop
#write a program to print right angle triangle

x = int(input("enter the number of rows:"))
for i in range(x):
    for j in range(i+1):
        print("*",end = "")
    print()

#write a program to print reverse right angle triangle
x = int(input("enter the number of rows:"))
for i in range(x):
    for j in range(x -i):
        print("*",end = "")
    print()
#write a program to print decrement right angle triangle
x = int(input("enter the number of rows:"))
for i in range(x):
    for j in range(x-i-1):
        print(" ",end = "")
    for j in range(i+1):
        print("*",end = "")
    print()  
#write a program to print triangle
x = int(input("enter the number of rows:"))
for i in range(x):
    for j in range(x-i-1):
        print(" ",end = "")
    for j in range(i+1):
        print("*",end = " ")
    print()  
